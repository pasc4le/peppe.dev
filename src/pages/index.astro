		<Prose>
			<Welcome />
		</Prose>
		<div class="flex gap-2 mt-2 flex-wrap mb-6">
			{socials.map(social => (
				<Pill icon={social.icon} text={social.text} href={social.href} />
			))}
		</div>
		<Section title="Projects" class="mb-6">
