---
import { render, type CollectionEntry } from "astro:content";
import Prose from "@/components/wrappers/Prose.astro";
import AwardItem from "./AwardItem.svelte";

interface Props {
  award: CollectionEntry<"awards">;
}

const { award } = Astro.props;

const { Content } = await render(award);
---

<AwardItem {award} client:load>
  <Prose class="max-w-full">
    <Content />
  </Prose>
</AwardItem>
